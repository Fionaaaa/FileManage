<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    android:descendantFocusability="blocksDescendants"
    android:background="@drawable/file_item">

    <ImageView
        android:id="@+id/imageView_file"
        android:layout_width="64dp"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/ic_folder" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SystemConfig"
        android:id="@+id/textView_file"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/imageView_file"
        android:layout_toRightOf="@+id/imageView_file"
        android:layout_toEndOf="@+id/imageView_file"
        android:layout_marginTop="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView_info"
        android:layout_below="@+id/textView_file"
        android:layout_alignLeft="@+id/textView_file"
        android:layout_alignStart="@+id/textView_file"
        android:layout_marginTop="5dp"
        android:textSize="12sp"
        />

    <ImageButton
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/imageButton"
        android:src="@drawable/ic_more_vert_grey600_16dp"

        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:layout_alignTop="@+id/textView_file"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />

</RelativeLayout>